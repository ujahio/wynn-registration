generator client {
  provider        = "prisma-client-js"
  output          = "../lib/generated/prisma"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model OTPStore {
  id         String   @id @default(uuid())
  contact    String
  otpHash    String
  expires_at DateTime @default(now())
  created_at DateTime @default(now())
}
